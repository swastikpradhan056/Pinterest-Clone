<%- include ('./partials/header.ejs') %>

<div
  class="w-full h-screen bg-[url('https://images.unsplash.com/photo-1608056069613-5629ee466519?q=80&w=1159&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] bg-center bg-cover flex items-center justify-center"
>
  <div
    class="lg:w-[25vw] w-[36vw] bg-white lg:px-20 px-10 py-10 rounded-[30px]"
  >
    <h1
      class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none mb-10"
    >
      Welcome to Pinterest
    </h1>
    <form action="/login" method="post">
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="Username"
      />
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
        type="password"
        name="password"
        placeholder="Password"
      />
      <input
        class="block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full"
        type="submit"
        name="submit"
        value="Login"
        placeholder="Password"
      />
      <a class="mt-2 inline-block font-semibold text-zinc-500" href=""
        >Forgot Password?</a
      >
      <p
        class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center"
      >
        By continuing, you agree to Pinterest's Terms of Service tab and
        acknowledge you've read our Privacy Policy. Notice at collection.
      </p>
    </form>
    <a
      class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full"
      href="/register"
      >Dont't have an account?</a
    >
  </div>
</div>

<%- include ('./partials/footer.ejs') %>
